	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="style" type="list" default="default" label="STYLE" description="STYLE_DESC">
					<option value="default">JDefault</option>
					<option value="quick">Quick</option>
					<option value="niftydefault">Nifty Default</option>
					<option value="niftyquick">Nifty Quick</option>
					<option value="mega">Mega</option>
				</field>
				<field name="direct" type="list" default="default" label="REG_HANDLER" description="REG_HANDLER_DESC">
					<option value="default">JDefault</option>
					<option value="jomsocial">JomSocial</option>
					<option value="kunena">Kunena</option>
					<option value="sandbox">Sandbox</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="pretext" type="textarea" cols="30" rows="5" default="" label="PRE_TEXT" description="PRE_TEXT_DESC"/>
				<field name="posttext" type="textarea" cols="30" rows="5" label="POST_TEXT" description="POST_TEXT_DESC"/>
				<field name="login" type="menuitem" default="" disable="separator" label="LOGIN REDIRECTION" description="LOGIN_REDIRECTION_DESC">
					<option value="">JDEFAULT</option>
				</field>
				<field name="logout" type="menuitem" default="" disable="separator" label="LOGOUT REDIRECTION" description="LOGOUT_REDIRECTION_DESC">
					<option value="">JDEFAULT</option>
				</field>
				<field name="greeting" type="radio" default="1" label="GREETING" description="GREETING_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="text_mode" type="list" default="input" label="USERNAME_PASS_IN" description="USERNAME_PASS_IN_DESC">
					<option value="label">LABEL</option>
					<option value="input">INPUT</option>
				</field>
				<field name="login_button" type="list" default="icon" label="LOGIN_BUTTON_AS" description="LOGIN_BUTTON_AS_DESC">
					<option value="text">TEXT</option>
					<option value="icon">ICON</option>
				</field>
				<field name="logout_button" type="list" default="text" label="LOGOUT_BUTTON_AS" description="LOGOUT_BUTTON_AS_DESC">
					<option value="text">TEXT</option>
					<option value="icon">ICON</option>
				</field>
				<field name="auto_remember" type="list" default="1" label="REMEMBER_ME_AUTO" description="REMEMBER_ME_AUTO_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="lost_password" type="list" default="1" label="LOST_PASS_LINK" description="LOST_PASS_LINK_DESC">
					<option value="0">JHide</option>
					<option value="1">JShow</option>
				</field>
				<field name="lost_username" type="list" default="1" label="LOST_USERNAME_LINK" description="LOST_USERNAME_LINK_DESC">
					<option value="0">JHide</option>
					<option value="1">JShow</option>
				</field>
				<field name="registration" type="list" default="1" label="REG_LINK" description="REG_LINK_DESC">
					<option value="0">JHide</option>
					<option value="1">JShow</option>
				</field>
				<field name="moduleclass_sfx" type="text" default="" label="MODULE_CLASS_SUFFIX" description="MODULE_CLASS_SUFFIX_DESC"/>
			</fieldset>
		</fields>
